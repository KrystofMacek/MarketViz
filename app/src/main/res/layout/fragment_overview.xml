<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.overview.OverviewFragment"
    android:padding="@dimen/fragment_padding">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_overview_heading_Markets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_overview_heading_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/fragment_overview_heading_textSize"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="403dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_overview_heading_Markets" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_overview_markets_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_overview_heading_LastViewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/fragment_overview_heading_lw"
        android:textSize="@dimen/fragment_overview_heading_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_overview_markets_recyclerView" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_overview_heading_LastViewed" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_overview_lastViewed_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />


</androidx.constraintlayout.widget.ConstraintLayout>